<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="schedulingapplication.View_Controller.LoginScreenController">
   <children>
      <Label fx:id="mainLabel" alignment="TOP_CENTER" layoutX="94.0" layoutY="49.0" prefHeight="39.0" prefWidth="413.0" styleClass="header" stylesheets="@screens.css" text="Scheduling Application">
         <font>
            <Font name="System Bold" size="27.0" />
         </font>
      </Label>
      <Label fx:id="instructionLabel" alignment="TOP_CENTER" layoutX="147.0" layoutY="110.0" stylesheets="@screens.css" text="Enter your username and password to login">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <Label fx:id="usernameLabel" alignment="CENTER_RIGHT" layoutX="21.0" layoutY="166.0" prefHeight="25.0" prefWidth="248.0" stylesheets="@screens.css" text="Username">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
       <TextField fx:id="username" layoutX="286.0" layoutY="166.0" />
      <Label fx:id="passwordLabel" alignment="CENTER_RIGHT" layoutX="21.0" layoutY="209.0" prefHeight="25.0" prefWidth="248.0" stylesheets="@screens.css" text="Password">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
       <PasswordField fx:id="password" layoutX="287.0" layoutY="209.0" />
      <Button fx:id="loginButtonName" layoutX="240.0" layoutY="258.0" mnemonicParsing="false" onAction="#login" stylesheets="@screens.css" text="Login" />
      <Button fx:id="quitButtonName" layoutX="447.0" layoutY="334.0" mnemonicParsing="false" onAction="#quit" stylesheets="@screens.css" text="Exit" />
      <Label fx:id="errorLabel" alignment="CENTER" layoutX="48.0" layoutY="234.0" prefHeight="17.0" prefWidth="504.0" textFill="#e80606" />
   </children>
</AnchorPane>
